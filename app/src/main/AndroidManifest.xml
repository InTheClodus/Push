<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bearever.pushdemo">


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity
            android:name=".InfoActivty"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="firebase_messaging_auto_init_enabled"
            android:value="false" />
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="false" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <receiver
            android:name=".PushBroadcastReceiverIml"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.bearever.push.IPushBroadcast" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".PushBroadReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.bearever.push.IPushBroadcast" />
                <action android:name="com.example.globalbroadcastdemo.MY_TEST"/>
            </intent-filter>
        </receiver>
<!--        //当接收到这条广播时，就会进行匹配，如果匹配成功，就会调用上面的onReceive方法-->
        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.globalbroadcastdemo.MY_TEST"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>